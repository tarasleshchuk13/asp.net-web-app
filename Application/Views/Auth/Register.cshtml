@model Application.Models.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<form method='post' class="form">
    <h2 class="text-center mb-2">Register</h2>
    @if (@ViewBag.ErrorMessage != null)
    {
        <div class="text-danger mb-2 text-center">@ViewBag.ErrorMessage</div>
    }
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" /> }
}